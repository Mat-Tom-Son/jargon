# Jargon Gateway Server - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL/MySQL)
# =============================================================================

# Option 1: Use a single DATABASE_URL
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# DATABASE_URL=mysql://username:password@localhost:3306/database_name

# Option 2: Use individual database settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jargon_dev
DB_USER=postgres
DB_PASSWORD=your_password_here

# =============================================================================
# SALESFORCE CONFIGURATION
# =============================================================================

# Get these from your Salesforce Connected App
SALESFORCE_INSTANCE_URL=https://your-org.salesforce.com
SALESFORCE_ACCESS_TOKEN=your_access_token_here

# Optional: For OAuth refresh tokens
# SALESFORCE_CLIENT_ID=your_client_id
# SALESFORCE_CLIENT_SECRET=your_client_secret
# SALESFORCE_REFRESH_TOKEN=your_refresh_token

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

PORT=3001
NODE_ENV=development

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable detailed logging
DEBUG=true

# Configuration file paths (usually don't need to change)
# CONFIG_DIR=./config/data

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Rate limiting
RATE_LIMIT_PER_MINUTE=600

# Cache settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# Security settings
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
